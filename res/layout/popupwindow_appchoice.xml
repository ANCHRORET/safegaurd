<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg_2"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp" >

    <TextView
        android:id="@+id/pop_tv_unInstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:drawableTop="@drawable/ic_open"
        android:text="卸载" />

    <TextView
        android:id="@+id/pop_tv_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:drawableTop="@drawable/ic_share"
        android:text="打开" />

    <TextView
        android:id="@+id/pop_tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:drawableTop="@drawable/ic_info"
        android:text="分享" />

    <TextView
        android:id="@+id/pop_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="3dp"
        android:drawableTop="@drawable/ic_uninstall"
        android:text="信息" />

</LinearLayout>
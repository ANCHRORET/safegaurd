<?xml version="1.0" encoding="utf-8"?>
<!-- 所有的带有lockPatternView的界面所用的界面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000056"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fbs_tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="按照以下行为设置密码"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fbs_btn_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_no_selector"
            android:text="上一步" />

        <Button
            android:id="@+id/fbs_btn_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_no_selector"
            android:text="下一步" />
    </LinearLayout>

    <com.tp.safeguard.view.LockPatternView
        android:id="@+id/fbs_lpv_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_weight="1" />

</RelativeLayout>